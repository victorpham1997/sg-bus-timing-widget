<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/widgetItemContainer"
    android:layout_marginVertical="2dp"
    android:background="@drawable/widget_arrival_item_background"
    >

    <LinearLayout
        android:id="@+id/layoutBusNoBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView android:id="@+id/textBusNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widget_on_secondary_bg"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:text="12"
            android:textSize="25dp"
            android:paddingHorizontal="10dp"
            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clipToOutline="true"
                android:background="@drawable/widget_bus_status_background"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/layoutNextBus"
                    android:paddingVertical="2dp"
                    android:paddingHorizontal="5dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:background="@color/neutral_blue"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconBusStatus"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/icon_double"
                        android:tintMode="src_atop" />

                    <TextView
                        android:id="@+id/textBusArrivalPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_dynamic_neutral95"
                        android:text="3"
                        android:layout_marginRight="2dp"
                        android:includeFontPadding="false"/>

                    <TextView
                        android:id="@+id/textPrimaryMin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:textSize="10dp"
                        android:gravity="bottom"
                        android:textColor="@color/material_dynamic_neutral95"
                        android:text="min"/>
                </LinearLayout>




            </LinearLayout>

            <TextView
                android:id="@+id/textBusArrivalSecondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="12dp"
                android:textColor="@color/widget_on_secondary_bg"
                android:text="and in 5, 13 min"
                ></TextView>





        </LinearLayout>



        <TextView
            android:id="@+id/textBusStopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textColor="@color/widget_on_secondary_bg"
            android:layout_gravity="center_vertical"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="Opps Changi Airspace"
            ></TextView>
    </LinearLayout>




</LinearLayout>