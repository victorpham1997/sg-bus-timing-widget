<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/app_dialog_background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/reloadProgresBar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/material_dynamic_primary70"
            android:layout_marginEnd="40dp"/>

        <TextView
            android:id="@+id/textReload"
            android:textColor="@color/app_on_neutral_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Updating Bus Stop Data"/>

    </LinearLayout>




</LinearLayout>