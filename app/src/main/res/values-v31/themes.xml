<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SGBusTimingWidget" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryContainer">@color/material_dynamic_primary90</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary60</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_secondary40</item>
        <item name="colorSecondaryContainer">@color/material_dynamic_secondary90</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary60</item>
        <item name="colorOnSecondary">@color/material_dynamic_secondary100</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">@color/material_dynamic_primary40</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">
            @color/material_dynamic_secondary20
        </item>
        <item name="android:navigationBarColor" tools:targetApi="l">
            @color/material_dynamic_secondary20
        </item>

        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/material_dynamic_neutral10</item>
        <item name="android:textColor">@color/material_dynamic_neutral90</item>
        <item name="android:textColorHint">@color/material_dynamic_neutral50</item>
        <item name="android:state_checked">@color/abs_red</item>
    </style>

    <style name="Theme.SGBusTimingWidget.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/material_dynamic_secondary95</item>
    </style>

    <style name="Theme.SGBusTimingWidget.ImageButton" parent="Widget.AppCompat.Button">
        <!-- color used by navigation icon and overflow icon -->
        <item name="android:background">@color/abs_red</item>
    </style>

    <style name="Theme.SGBusTimingWidget.PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="popupMenuBackground">@drawable/popup_menu_background</item>
        <item name="android:textColor">@color/material_dynamic_neutral90</item>

        <!-- Note: this theme overlay will only work if the style is applied directly to a Toolbar. -->
    </style>


    <style name="Theme.SGBusTimingWidget.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SGBusTimingWidget.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.SGBusTimingWidget.AppWidgetContainer" parent="Theme.SGBusTimingWidget.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>